<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b1"
                android:layout_weight="1"
                android:onClick="onClick"/>

            <ImageView
                android:id="@+id/iv_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b2"
                android:layout_weight="1"
                android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b3"
                android:layout_weight="1"
                android:onClick="onClick"/>

            <ImageView
                android:id="@+id/iv_b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b4"
                android:layout_weight="1"
                android:onClick="onClick"/>

        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your sugar level and quantity"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_bc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_bc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b2"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_bc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b3"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_bc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b4"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_toLeftOf="@id/iv_bc1"
        android:layout_alignTop="@id/iv_bc1"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:visibility="invisible"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_20"
        android:layout_toLeftOf="@id/iv_bc1"
        android:layout_below="@id/btn_0"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20%"
        android:visibility="invisible"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_50"
        android:layout_below="@id/btn_20"
        android:layout_toLeftOf="@id/iv_bc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:visibility="invisible"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_70"
        android:layout_alignTop="@id/iv_bc1"
        android:layout_toRightOf="@id/iv_bc1"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70%"
        android:visibility="invisible"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_100"
        android:layout_below="@id/btn_70"
        android:layout_toRightOf="@id/iv_bc1"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:visibility="invisible"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_120"
        android:layout_below="@id/btn_100"
        android:layout_toRightOf="@id/iv_bc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120%"
        android:visibility="invisible"
        android:onClick="onClick"/>

    <ImageView
        android:layout_alignLeft="@id/iv_bc1"
        android:layout_below="@id/iv_bc1"
        android:id="@+id/iv_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        android:onClick="onClick"
        android:visibility="invisible"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="70sp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_alignRight="@id/iv_bc1"
        android:layout_below="@id/iv_bc1"
        android:id="@+id/iv_minus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/minus"
        android:onClick="onClick"
        android:visibility="invisible"/>



</RelativeLayout>